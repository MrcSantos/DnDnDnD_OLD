<%- include('../partials/InfoUserHeader'); -%>

<link rel="stylesheet" href="/css/user/login.min.css">

<div class="container">
	<h4 class="red stroke">Accedi</h4>

	<div class="card">
		<div class="card-body">
			<form>
				<div>
					<label for="username">Indirizzo mail o Username</label>
					<input type="text" id="username" class="form-control" placeholder="DnDnDnD@dnd.dnd" required autofocus>
				</div>

				<div>
					<label for="password">Password</label>
					<input type="password" id="password" class="form-control" placeholder="P@$$w0rd" required>
				</div>

				<div class="custom-control custom-switch">
					<input type="checkbox" class="custom-control-input form-control" id="remember">
					<label class="custom-control-label" for="remember">Ricordami</label>
				</div>

				<span>Non hai un account? <a href="/user/register" class="red">Registrati</a></span>
				<button class="btn btn-lg biggerOnHover" type="submit">Login</button>
			</form>
		</div>
	</div>
</div>
